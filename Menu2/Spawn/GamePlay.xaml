<Page x:Class="Menu2.GamePlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu2"
        mc:Ignorable="d"
        Title="GamePlay"  Height="720" Width="1280">
    <Viewbox Stretch="Fill"  Height="720" Width="1280">
        <Canvas x:Name="GameScreen" Focusable="True" KeyUp="KeyboardUp" KeyDown="KeyBoardDown"  Height="720" Width="1280" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image Source="/Spawn/images/spawn.jpg" Width ="1280" Height="720"/>
            <Image x:Name="Character" Tag="User" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="752" Canvas.Top="375" Stretch="Fill" Source="/Spawn/characterLeft.png"/>
            <Image Source="/Spawn/borders.PNG" Width="1280" Height="720"/>
            <Image Source="/Spawn/images/trees.PNG" Width="1280" Height="720"/>
            <Image Height="100" Tag="Collide" Canvas.Left="1086" Canvas.Top="375" Width="100" Source="/Spawn/wall.png" Stretch="Fill"/>

        </Canvas>
    </Viewbox>
</Page>
