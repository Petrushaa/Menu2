<Page x:Class="Menu2.GamePlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu2"
        mc:Ignorable="d"
        Title="GamePlay"  Height="1080" Width="1920">
    <Viewbox Stretch="Fill">
        <Canvas x:Name="GameScreen" Focusable="True" KeyUp="KeyboardUp" KeyDown="KeyBoardDown"  Height="1080" Width="1920" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image Source="/Spawn/images/spawn.jpg" Height="1080" Width="1920"/>
            <Image x:Name="Character" Tag="User" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="640" Stretch="Fill" Source="/Spawn/characterLeft.png" Canvas.Top="151"/>
            <Image Source="/Spawn/borders.PNG" Width="1920" Height="1080"/>
            <Image Source="/Spawn/images/trees.PNG" Width="1920" Height="1080"/>
        </Canvas>
    </Viewbox>
</Page>
