<Page x:Name="windowMaze" x:Class="Menu2.Maze1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu2"
        mc:Ignorable="d"
        Title="Maze1" Height="720" Width="1280" >
    <Viewbox>
        <Canvas x:Name="GameScreen" Focusable="True" KeyUp="KeyboardUp" KeyDown="KeyBoardDown" Background="Gray" Height="720" Width="1280">
            <Rectangle x:Name="Character" Tag="User" Width="50" Height="54" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="548" Canvas.Left="516">
                <Rectangle.Fill>
                    <ImageBrush x:Name="ImagePlayer" ImageSource="/images/characterRight.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle x:Name="Wall" Tag="Collide" Stroke="Black" Width="490" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="0" Canvas.Top="670">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/wallMaze.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle
        Width="663" Tag="Collide" Stroke="Black" x:Name="Wall_Копировать" Height="50" HorizontalAlignment="Left" Canvas.Left="617" VerticalAlignment="Center" Canvas.Top="670">
                <Rectangle.Fill
        >
                    <ImageBrush ImageSource="/wallMaze.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle
                Width="1280" Tag="Collide" Stroke="Black" x:Name="Wall_Копировать1" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="0" Canvas.Top="0">
                <Rectangle.Fill
        >
                    <ImageBrush
                        ImageSource="/wallMaze.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle
                Width="50" Tag="Collide" Stroke="Black" x:Name="Wall_Копировать2" Height="615" Canvas.Left="0" Canvas.Top="50" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Rectangle.Fill
        >
                    <ImageBrush

                        ImageSource="/wallMaze.png"/>

                </Rectangle.Fill>

            </Rectangle>
            <Rectangle

                Width="50" Tag="Collide" Stroke="Black" x:Name="Wall_Копировать3" Height="615" Canvas.Left="1230" Canvas.Top="55" HorizontalAlignment="Center" VerticalAlignment="Top">

                <Rectangle.Fill

        >

                    <ImageBrush ImageSource="/wallMaze.png"/>

                </Rectangle.Fill>

            </Rectangle>
            <ProgressBar x:Name="healthBar" Height="30"  Width="200" Value="100" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="1070" Canvas.Top="20"/>
            <Label x:Name="lbHealth" Content="Health:" Canvas.Left="966" Canvas.Top="10" Height="40" Width="89" FontSize="30" FontFamily="Bahnschrift SemiBold SemiCondensed" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="lbAmmo" Content="Ammo: 0" Canvas.Left="91" Canvas.Top="10" Height="40" Width="122" FontSize="30" FontFamily="Bahnschrift SemiBold SemiCondensed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Canvas>
    </Viewbox>
</Page>
