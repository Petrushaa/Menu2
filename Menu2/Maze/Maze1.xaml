<Page x:Name="windowMaze" x:Class="Menu2.Maze1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu2"
        mc:Ignorable="d"
        Title="Maze1" Height="720" Width="1280" >
    <Viewbox Stretch="Fill">
        <Canvas x:Name="GameScreen" Focusable="True" KeyUp="KeyboardUp" KeyDown="KeyBoardDown" Background="Gray" Height="720" Width="1280">
            <Rectangle x:Name="Character" Tag="User" Width="81" Height="67" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="457" Canvas.Left="508">
                <Rectangle.Fill>
                    <ImageBrush x:Name="ImagePlayer" ImageSource="/images/characterRight.png"/>
                </Rectangle.Fill>
            </Rectangle>
            <ProgressBar x:Name="healthBar" Height="30"  Width="200" Value="100" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="1070" Canvas.Top="20"/>
            <Label x:Name="lbHealth" Content="Health:" Canvas.Left="966" Canvas.Top="10" Height="40" Width="89" FontSize="30" FontFamily="Bahnschrift SemiBold SemiCondensed" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="lbAmmo" Content="Ammo: 0" Canvas.Left="91" Canvas.Top="10" Height="40" Width="122" FontSize="30" FontFamily="Bahnschrift SemiBold SemiCondensed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Canvas>
    </Viewbox>
</Page>
