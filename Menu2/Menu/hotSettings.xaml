<Window x:Class="Menu2.hotSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu2"
        mc:Ignorable="d"
        Title="hotSettings" Height="500" Width="500" WindowStyle="None"  WindowStartupLocation="CenterScreen">
    <Viewbox Stretch="Fill">
        <Canvas Width="500" Height="500">
            <Button x:Name="btResume" Style ="{DynamicResource TransparentButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="90" Canvas.Top="124" Height="112" Width="320" Click="btResume_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/Menu/Resume.PNG" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button x:Name="btExit" Style ="{DynamicResource TransparentButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btExit_Click" Height="72" Canvas.Left="103" Canvas.Top="342" Width="294">
                <Button.Background>
                    <ImageBrush ImageSource="/Menu/ExitHot.PNG" Stretch="Uniform"/>
                </Button.Background>
            </Button>
        </Canvas>
    </Viewbox>
</Window>
